# Environment Configuration for Go Backend
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
PORT=8080

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/workspaces?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=change-me-in-production-use-strong-secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DUO MFA (Optional - for production)
DUO_IKEY=your-duo-integration-key
DUO_SKEY=your-duo-secret-key
DUO_API_HOSTNAME=api-xxxxxxxx.duosecurity.com

# AI Service
AI_SERVICE_URL=http://localhost:8081

# Sync Schedule (cron format)
SYNC_SCHEDULE=0 */6 * * *
